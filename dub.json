{
    "name": "dmdscript",
    "description": "An implementation of the ECMA 262 (Javascript) programming language ",
    "copyright": "Copyright (c) 2000-2002 by Chromium Communications, Copyright (c) 2004-2010 by Digital Mars",
    "authors": ["Walter Bright", "Dmitry Olshansky"],
    "dependencies": {
        "dmdscript:engine" : "*",
        "dmdscript:ds" : "*",
        "dmdscript:ds-ext": "*"
    },

    "targetType": "none",
    "subPackages" : [
        {
            "name": "engine",
            "sourcePaths": ["engine/source"],
            "importPaths": ["engine/source"],
            "dependencies": {
                "undead" : ">=1.0.3"
            },
            "targetType": "library",
        },
        {
            "name": "ds",
            "description": "DMDScript stand-alone interpreter sample program",
            "sourcePaths": ["ds/source"],
            "importPaths": ["ds/source"],
            "dependencies": {
                "dmdscript:engine": "*"
            },
            "targetType": "executable"
        },
        {
            "name": "ds-ext",
            "sourcePaths": ["ds-ext/source"],
            "importPaths": ["ds-ext/source"],
            "dependencies": {
                "dmdscript:engine": "*"
            },
            "targetType": "executable"
        }
    ],
    "license": "BSL-1.0",
}
